<openerp>
    <data>
        <!-- Compassion A4 Donation Letter -->
        <record id="paperformat_a4_donation" model="report.paperformat">
            <field name="name">Compassion A4 Donation Letter</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">45</field>
            <field name="margin_bottom">6</field>
            <field name="margin_left">6</field>
            <field name="margin_right">6</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">3</field>
            <field name="dpi">150</field>
        </record>

        <!-- Report for printing a letter on Compassion Paper -->
        <report id="report_thankyou_letter"
                model="partner.communication.job"
                string="A4 Donation Letter"
                report_type="qweb-pdf"
                name="thankyou_letters.thankyou_letter"
        />
        <record id="report_thankyou_letter" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="paperformat_a4_donation"/>
        </record>

        <template id="thankyou_letter">
            <t t-set="custom_css">
                .container {
                    font-family: "tetriaLight";
                    font-size: 10pt;
                }
                /* Format lists for PDF */
                ul {
                    list-style: none;
                }
                li {
                    padding-left: 16px;
                }
                li:before {
                    content: "-";
                    padding-right: 8px;
                }
                .right {
                    position: relative;
                    left: 96mm;
                }
                #pp {
                    font-family: verdana;
                }
                #pp-box {
                    display: inline-block;
                    padding: 1mm;
                    width: 50mm;
                    line-height: initial;

                    /*margin-right: 2mm;*/
                    border-style: solid;
                    border-width: 1pt;
                }
                #pp-box div:first-child{
                    font-size: 12pt;
                    font-weight: bold;
                }
                #pp-box div:last-child{
                    font-size: 8pt;
                }
                #pp-post {
                    display: inline-block;
                    font-size: 6pt;
                }
                #pp hr {
                    margin-top: 0.5mm;
                    margin-bottom: 3mm;
                }
                #date {
                    margin-left: 96mm;
                    margin-top: 3mm;
                }
                #content {
                    margin-top: 5mm;
                    width: 198mm;
                }
                #success-story {
                    display: inline-block;
                    margin-right: 5mm;
                    vertical-align: top;
                    padding: 2mm;
                    width: 50mm;
                    background-color: #ccffff;
                }
                #body {
                    display: inline-block;
                    width: 140mm;
                }
                #signature {
                    position: absolute;
                    left: 150mm;
                    top: 215mm;
                }
            </t>
            <t t-call="report_compassion.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div id="address" class="right">
                            <div id="pp">
                                <div id="pp-box">
                                    <div>P.P.</div>
                                    <div>CH-1400 Yverdon-les-Bains</div>
                                </div>
                                <div id="pp-post">
                                    <p>Poste CH SA</p>
                                </div>
                                <hr/>
                            </div>
                            <span t-raw="o.partner_id.short_address"/>
                        </div>
                        <div id="date">
                            <span t-raw="o.date_communication"/>
                        </div>
                        <div id="content">
                            <div id="success-story" t-if="o.success_story_id">
                                <span t-raw="o.success_story_id.body"/>
                            </div>
                            <div id="body">
                                <span t-raw="o.body_html"/>
                            </div>
                        </div>
                        <div id="signature">
                            <span t-raw="o.signature"/>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>
